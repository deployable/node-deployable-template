{
  "name": "{{ name }}",
  "version": "0.1.0",
  "description": "{{ description }}",
  "main": "lib/index.js",
  "scripts": {
    "test": "mocha",
    "test:debug": "DEBUG='*' mocha debug",
    "test:coverage": "istanbul cover _mocha && istanbul check-coverage",
    "npm:pubtest": "set -uex; npm test; npm version prerelease; npm publish --tag testing",
    "npm:publish": "set -uex; npm run test:coverage; [ -z \"$(git status --porcelain)\" ]; npm version patch; git push; npm publish; git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+{{ git_url }}{{ prefix name 'node-' }}.git"
  },
  "keywords": {{{ json keywords }}},
  "author": "{{ dev_name }} <{{ dev_email }}>",
  "license": "{{ default module_license 'MIT' }}",
  "bugs": {
    "url": "{{ git_url }}{{ prefix name 'node-' }}/issues"
  },
  "homepage": "{{ git_url }}{{ default name 'node-' }}#readme",
  "devDependencies": {
    "chai": "^3.5.0",
    "mocha": "^3.1.2",
    "istanbul": "~0.4.5"
  },
  "dependencies": {
    "bluebird": "^3.0.1",
    "debug": "^2"
  }
}

